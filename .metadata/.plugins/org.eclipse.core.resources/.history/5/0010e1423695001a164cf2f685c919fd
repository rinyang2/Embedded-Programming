void ui_task(void *pvParameters)
{
    scale = 1;                                                          // we initialize the scale and offset values
    offset = 0;
while(1){
    INT8U key = 0;
    key = get_keyboard();
    gfprintf(COM2, "%c%cCASH:1 CARD:2", 0x1B, 0x80);
    if(key=='1'){
        gfprintf(COM2, "%c%cCASH SELECTED", 0x1B, 0xA8);
    }
    else if(key=='2'){
            gfprintf(COM2, "%c%cCARD SELECTED", 0x1B, 0xA8);
        }

}
};

