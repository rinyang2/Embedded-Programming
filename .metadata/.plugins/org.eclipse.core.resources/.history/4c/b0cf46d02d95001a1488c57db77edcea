/*****************************   Functions   *******************************/
void index(){
    INT8U ch;
    static INT8U  Buf[4];
    while(get_file(COM3, &ch)){
        xQueueReceive(xQueueKey, &ch, portMAX_DELAY);
        gfprintf( COM2, "%cSELECT PAYMENT", 0x84);
        gfprintf( COM2, "%cCARD: 1 / CASH: 2", 0xC4);
        get_file( COM3, &ch );
        vTaskDelay(250 / portTICK_RATE_MS); // wait 50 milliseconds
    }
}
