#include "FreeRTOS.h"
#include "glob_def.h"
#include "emp_type.h"
#include "tm4c123gh6pm.h"
#include "string.h"
#include "file.h"
#include "lcd.h"
#include "key.h"
#include "ui.h"
#include "scale.h"
#include "semphr.h"
#include "adc.h"
#include "digiswitch.h"
#include "read_card.h"


void ui_task(void *pvParameters)
{

    while(1){
        INT8U key = 0;
        INT8U TEMP = 0;
        key = get_keyboard();

        gfprintf(COM2, "%c%cCASH:1 CARD:2", 0x1B, 0x80);




        if(key=='1'){
            gfprintf(COM2, "%c%cINSERT CASH", 0x1B, 0xA8);
            TEMP=driver() * 10;
            gfprintf(COM2, "%c%c%4uDKK inserted", 0x1B, 0xA8,TEMP);
        }








        else if(key=='2'){
           if(!read_card()){
               gfprintf(COM2, "%c%cCARD REJECTED", 0x1B, 0xA8);
           }
           else{
               gfprintf(COM2, "%c%cLF92:1 LF95:2", 0x1B, 0x80);
               gfprintf(COM2, "%c%cDIESEL:3", 0x1B, 0xA8);
           }
        }


    }
    gfprintf(COM2, "%c%cENDOFLOOP", 0x1B, 0xA8);
};

